<h3><%= @merchant.name %> Deals</h3>

<div class="btn-group">
  <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    Upcoming Holidays
  </button>
  <ul class="dropdown-menu">
    <% @holidays.each do |holiday, date| %>
      <li><strong><%= holiday %></strong>
        on <%= date.to_date.strftime('%A %B %e, %Y') %><li>
    <% end %>
  </ul>
</div>

<% @discounts.each do |discount| %>
<div id="discount-<%= discount.id %>">
  <p><%= @discounts.index(discount) + 1 %>. <%= discount.quantity_threshold %> items for <%= number_to_percentage(discount.percentage, precision: 0) %> off.</p>
  <%= link_to 'View Details', merchant_discount_path(@merchant.id, discount.id) %>
  <%= link_to 'Remove Discount', "/merchants/#{@merchant.id}/discounts/#{discount.id}", method: :delete %>
  </div>
<% end %>

<br>
<br>

<h3>Upcoming Holidays</h3>
<% @holidays.each do |holiday, date| %>
  <p>Holiday: <%= holiday %>
    on <%= date.to_date.strftime('%A %B %e, %Y') %></p>
<% end %>

<%= link_to 'New Discount', new_merchant_discount_path(@merchant.id) %>
