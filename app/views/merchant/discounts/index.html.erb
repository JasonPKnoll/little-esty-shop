<h3><%= @merchant.name %> Deals</h3>

<% @discounts.each do |discount| %>
<div id="discount-<%= discount.id %>">
  <p><%= @discounts.index(discount) + 1 %>. <%= discount.quantity_threshold %> items for <%= number_to_percentage(discount.percentage * 100, precision: 0)  %> off.</p>
  <%= link_to 'View Details', merchant_discount_path(@merchant.id, discount.id) %>
  </div>
<% end %>
<br>
<br>
<h3>Upcoming Holidays</h3>
<% @holidays.each do |holiday, date| %>
  <p>Holiday: <%= holiday %>
    on <%= date.to_date.strftime('%A %B %e, %Y') %></p>
<% end %>

<%= link_to 'New Discount', new_merchant_discount_path(@merchant.id) %>
