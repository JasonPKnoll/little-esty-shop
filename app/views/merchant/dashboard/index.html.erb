<br>
<h1><%= @merchant.name %></h1>
<br>
<p><%= link_to 'My Items', "/merchants/#{@merchant.id}/items", class: 'btn btn-success' %></p>
<p><%= link_to 'My Invoices', "/merchants/#{@merchant.id}/invoices", class: 'btn btn-secondary' %></p>
<%= link_to "View Discounts", merchant_discounts_path(@merchant.id), class: 'btn btn-primary' %>

<h3>Items Ready to Ship</h3>

<table class="table table table-striped">
  <thead>
    <tr>
      <th scope="col">Item Name</th>
      <th scope="col">Date Invoiced</th>
      <th scope="col">Link</th>
    </tr>
  </thead>
  <% @items_not_shipped.each do |item| %>
  <tbody>
    <tr>
      <td><%= item["name"] %></td>
      <td><%= item["invoice_date"].strftime('%A %B %e, %Y') %></td>
      <td><%= link_to "#{item["invoice_id"]}","/merchants/#{@merchant.id}/invoices/#{item["invoice_id"]}", class: 'btn btn-success'  %></td>
    </tr>
  </tbody>
  <% end %>
</table>

