<h1><%= @merchant.name %>'s Invoices </h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Invoice</th>
      <th scope="col">View</th>
    </tr>
  </thead>
  <% @invoices.each do |invoice| %>
  <tbody>
    <tr>
      <td><%= @invoices.index(invoice) + 1 %></td>
      <td><%= link_to "#{invoice.id}","/merchants/#{@merchant.id}/invoices/#{invoice.id}", class: 'btn btn-success' %></td>
    </tr>
  </tbody>
  <% end %>
</table>
